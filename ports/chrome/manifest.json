{
  "name": "Ideal Slack",
  "description": "A friendly yet advanced client for IRC (Internet Relay Chat). DEVELOPMENT",
  "version": "0.0.1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' http://fonts.googleapis.com; object-src 'self'",
  "app": {
    "background": {
      "scripts": ["ports/chrome/background.js"]
    }
  },
  "permissions": [
    { "socket": [ "tcp-connect" ] },
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "64": "assets/icon-64.png",
    "128": "assets/icon-128.png",
    "256": "assets/icon-256.png",
    "512": "assets/icon-512.png"
  }
}

